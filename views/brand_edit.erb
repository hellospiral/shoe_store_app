<h3>Edit information for <%= @brand.name %></h3>

<form class="well" action="/brands/<%= @brand.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="name">Name:</label>
    <input id = "name" type="text" name="name" value="<%=@brand.name%>" class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Update Brand</button>
</form>

<a href="/" class="btn btn-default active" role="button">Home</a>
