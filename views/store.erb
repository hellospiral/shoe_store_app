<h1><%= @store.name() %></h1>

<div class='well'>
  <h4>Address:</h4>
  <h5><%= @store.address()%></h5>
  <h4>Phone Number:</h4>
  <h5><%= @store.phone()%></h5>
</div>
<a href="/stores/<%=@store.id()%>/edit" class="btn btn-warning">Edit Store</a>
<br>
<form class="" action="/stores/<%= @store.id() %>" method="post">
  <input name = "_method" type="hidden" value="delete">
  <button class = 'btn btn-danger' type="submit">Delete Store</button>
</form>
<br>

<a href="/" class="btn btn-default active" role="button">Home</a>
