<h1><%= @store.name() %></h1>

<div class='well'>
  <h4>Address:</h4>
  <h5><%= @store.address()%></h5>
  <h4>Phone Number:</h4>
  <h5><%= @store.phone()%></h5>
</div>
<a href="/stores/<%=@store.id()%>/edit" class="btn btn-warning">Edit Store</a>
<br>
<form class="" action="/stores/<%= @store.id() %>" method="post">
  <input name = "_method" type="hidden" value="delete">
  <button class = 'btn btn-danger' type="submit">Delete Store</button>
</form>
<hr>
<% if @store.brands.any? %>
  <h4>Brands sold at <%= @store.name %></h4>
  <ul class="list-group">
    <% @store.brands.each() do |brand| %>
      <li class="list-group-item"><%= brand.name() %></li>
    <% end %>
  </ul>
<% end %>
<h4>Select the brands you want to sell at <%= @store.name %></h4>
<form action="/stores/<%=@store.id%>/brands" method="post">
  <input type="hidden" name="_method" value="patch">
  <% @brands.each() do |brand| %>
    <div class="checkbox">
      <label>
        <input type="checkbox" name="brand_ids[]" value="<%=brand.id%>"><%= brand.name %>
      </label>
    </div>
  <% end %>
  <button class= "btn btn-success" type="submit">Add Brands</button>
</form>
<hr>
<a href="/" class="btn btn-default active" role="button">Home</a>
